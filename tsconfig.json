{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@": [
        "src"
      ],
      "@/*": [
        "src/*"
      ],
    },
    "sourceMap": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
