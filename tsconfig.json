{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.vue",
    "src/types/*.ts",
    "src/types/*.d.ts",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/^": [
        "."
      ],
      "/^/*": [
        "./*"
      ],
      "/@": [
        "src"
      ],
      "/@/*": [
        "src/*"
      ],
    },
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}